[{"data":1,"prerenderedAt":180},["Reactive",2],{"content-query-KJAP8t5Dhf":3},{"_path":4,"_dir":5,"_draft":6,"_partial":6,"_locale":7,"title":8,"description":9,"image":10,"sequence":11,"category1":12,"category2":13,"link":14,"author":15,"head":16,"publishedAt":30,"toc":31,"body":32,"_type":175,"_id":176,"_source":177,"_file":178,"_extension":179},"/councilor/service/s2031","service",false,"","李宗豪市政總質詢",null,"/images/service/s2031-1.jpeg",2031,"A. 健全都市發展","A.4 強化區域交通規劃","https://www.facebook.com/share/p/i12ff2QeKi95qn67/","李宗豪",{"meta":17},[18,20,22,24,27],{"name":19,"content":7},"keywords",{"name":21,"content":7},"robots",{"name":23,"content":15},"author",{"name":25,"content":26},"copyright","© 2024 A7新林口-社區網站",{"name":28,"content":29},"og:title","地方行政","2024-05-28T00:00:00.000Z",true,{"type":33,"children":34,"toc":166},"root",[35,42,48,55,86,92,132,138,158],{"type":36,"tag":37,"props":38,"children":39},"element","h2",{"id":8},[40],{"type":41,"value":8},"text",{"type":36,"tag":43,"props":44,"children":45},"p",{},[46],{"type":41,"value":47},"這次的總質詢，準備太多沒有講完，列出重點向大家報告 🔜",{"type":36,"tag":49,"props":50,"children":52},"h3",{"id":51},"教育資源",[53],{"type":41,"value":54},"📌 教育資源",{"type":36,"tag":43,"props":56,"children":57},{},[58,60,64,66,69,71,74,76,79,81,84],{"type":41,"value":59},"龜山就學人口快速成長，但教育資源供不應求，硬體設施也不完善，我提醒教育局，提前準備因應未來可能會有爆炸性就學需求！我具體建議：",{"type":36,"tag":61,"props":62,"children":63},"br",{},[],{"type":41,"value":65},"\n▪️ 文青國中小二期、活動中心應盡快發包開工。",{"type":36,"tag":61,"props":67,"children":68},{},[],{"type":41,"value":70},"\n▪️ 大崗高中應提前規劃，成立設校籌備處。",{"type":36,"tag":61,"props":72,"children":73},{},[],{"type":41,"value":75},"\n▪️ 尋找閒置公有地設立托嬰中心、幼兒園。",{"type":36,"tag":61,"props":77,"children":78},{},[],{"type":41,"value":80},"\n▪️ 幸福國中操場工程應加速進度。",{"type":36,"tag":61,"props":82,"children":83},{},[],{"type":41,"value":85},"\n▪️ 大坪頂地區缺乏圖書館，呼籲市府規劃一座兒童圖書館，結合周邊公園綠地，打造開放式兒童文學基地！",{"type":36,"tag":49,"props":87,"children":89},{"id":88},"交通及建設",[90],{"type":41,"value":91},"📌 交通及建設",{"type":36,"tag":43,"props":93,"children":94},{},[95,97,100,102,105,107,110,112,115,117,120,122,125,127,130],{"type":41,"value":96},"▪️ 道路建設加速：變一道路、長慶一街瓶頸打通、青山路接文化一路、牛角坡路接樂善一路等。",{"type":36,"tag":61,"props":98,"children":99},{},[],{"type":41,"value":101},"\n▪️ 盡快補足公車司機人力，完整大眾運輸路網。",{"type":36,"tag":61,"props":103,"children":104},{},[],{"type":41,"value":106},"\n▪️ 棕線捷運核定通過，要求加速後續進度，爭取明年動工！",{"type":36,"tag":61,"props":108,"children":109},{},[],{"type":41,"value":111},"\n▪️ 要求恢復棕線捷運 BRH05A 龍壽站，平衡區域發展。",{"type":36,"tag":61,"props":113,"children":114},{},[],{"type":41,"value":116},"\n▪️ 要求提高捷運聯開容積，提升公共效益。",{"type":36,"tag":61,"props":118,"children":119},{},[],{"type":41,"value":121},"\n▪️ 龜山國民運動中心已流標多次，要求今年發包動工！",{"type":36,"tag":61,"props":123,"children":124},{},[],{"type":41,"value":126},"\n▪️ 爭取提供棒球員完善的室內打擊練習場！",{"type":36,"tag":61,"props":128,"children":129},{},[],{"type":41,"value":131},"\n▪️ 鐵路地下化後，建議市府參考綠廊道方式，連結龜山桃林步道，規劃帶狀公園。",{"type":36,"tag":49,"props":133,"children":135},{"id":134},"宜居環境",[136],{"type":41,"value":137},"📌 宜居環境",{"type":36,"tag":43,"props":139,"children":140},{},[141,143,146,148,151,153,156],{"type":41,"value":142},"龜山人口成長率第一名，許多公共建設卻不完善，不合時宜的設施也應該檢討，我要求市府重視鄉親居住的環境。",{"type":36,"tag":61,"props":144,"children":145},{},[],{"type":41,"value":147},"\n▪️ 增加垃圾車、增加清潔隊員人力、調整清運路線。",{"type":36,"tag":61,"props":149,"children":150},{},[],{"type":41,"value":152},"\n▪️ 要求大埔垃圾轉運站退場！還給鄉親乾淨的居住環境！",{"type":36,"tag":61,"props":154,"children":155},{},[],{"type":41,"value":157},"\n市長及副市長承諾轉運站於今年底退場‼️",{"type":36,"tag":43,"props":159,"children":160},{},[161],{"type":36,"tag":162,"props":163,"children":165},"img",{"alt":164,"src":10},"s2031-1.jpeg",[],{"title":7,"searchDepth":167,"depth":167,"links":168},2,[169],{"id":8,"depth":167,"text":8,"children":170},[171,173,174],{"id":51,"depth":172,"text":54},3,{"id":88,"depth":172,"text":91},{"id":134,"depth":172,"text":137},"markdown","content:councilor:service:s2031.md","content","councilor/service/s2031.md","md",173695