[{"data":1,"prerenderedAt":117},["Reactive",2],{"content-query-sQL0UctuvY":3},{"_path":4,"_dir":5,"_draft":6,"_partial":6,"_locale":7,"title":8,"description":9,"image":10,"sequence":11,"category1":12,"category2":13,"link":14,"author":15,"head":16,"publishedAt":30,"toc":31,"body":32,"_type":112,"_id":113,"_source":114,"_file":115,"_extension":116},"/councilor/service/s2021","service",false,"","樂善國小｜通學步道改善計劃",null,"/images/service/s2021-1.jpeg",2021,"A. 健全都市發展","A.1 加速宜居城市建設","https://www.facebook.com/groups/a7xinlinkou/permalink/701809231924328/","李宗豪",{"meta":17},[18,20,22,24,27],{"name":19,"content":7},"keywords",{"name":21,"content":7},"robots",{"name":23,"content":15},"author",{"name":25,"content":26},"copyright","© 2024 A7新林口-社區網站",{"name":28,"content":29},"og:title","地方行政","2024-04-17T00:00:00.000Z",true,{"type":33,"children":34,"toc":108},"root",[35,43,90,95,100],{"type":36,"tag":37,"props":38,"children":40},"element","h2",{"id":39},"樂善國小通學步道改善計劃",[41],{"type":42,"value":8},"text",{"type":36,"tag":44,"props":45,"children":46},"p",{},[47,49,53,55,58,60,63,65,68,70,73,75,78,80,83,85,88],{"type":42,"value":48},"樂學路上通學步道原本寬度 1 米，市府規劃預計會拓寬至 1.9 米，改善長度約 550 公尺。\n周邊路口也會一起做人本改善：",{"type":36,"tag":50,"props":51,"children":52},"br",{},[],{"type":42,"value":54},"\n✔️ 退縮行穿線",{"type":36,"tag":50,"props":56,"children":57},{},[],{"type":42,"value":59},"\n✔️ 增設無障礙斜坡道",{"type":36,"tag":50,"props":61,"children":62},{},[],{"type":42,"value":64},"\n✔️ 擴大路口轉角處",{"type":36,"tag":50,"props":66,"children":67},{},[],{"type":42,"value":69},"\n🔸 樂學路＆長慶一街",{"type":36,"tag":50,"props":71,"children":72},{},[],{"type":42,"value":74},"\n🔸 樂學路＆長慶二街",{"type":36,"tag":50,"props":76,"children":77},{},[],{"type":42,"value":79},"\n🔸 樂學路＆長慶三街",{"type":36,"tag":50,"props":81,"children":82},{},[],{"type":42,"value":84},"\n🔸 樂學路＆樂學路 590 巷",{"type":36,"tag":50,"props":86,"children":87},{},[],{"type":42,"value":89},"\n🔸 樂學路＆樂學路 622 巷",{"type":36,"tag":44,"props":91,"children":92},{},[93],{"type":42,"value":94},"✅ 樂善國小門口（樂學路 339 巷）會優先設置避車彎，讓學生上下學搭乘專車可以停靠。",{"type":36,"tag":44,"props":96,"children":97},{},[98],{"type":42,"value":99},"先前會勘時，我提出建議學校擋土牆要做退縮，讓人行道不要有阻礙，但這次計畫卻未被納入，今天再次要求希望重新修正，讓人行道完善，而且要與文德非營利幼兒園與樂善社區周邊做串聯，讓樂善國小及文德非營利幼兒園的小朋友上下學更安全！",{"type":36,"tag":44,"props":101,"children":102},{},[103],{"type":36,"tag":104,"props":105,"children":107},"img",{"alt":106,"src":10},"s2021-1.jpeg",[],{"title":7,"searchDepth":109,"depth":109,"links":110},2,[111],{"id":39,"depth":109,"text":8},"markdown","content:councilor:service:s2021.md","content","councilor/service/s2021.md","md",1735981688034]